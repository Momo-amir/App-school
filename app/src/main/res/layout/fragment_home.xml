<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Welcome banner -->
    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_back"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Recent apps section -->
    <TextView
        android:id="@+id/text_recent_apps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/recent_apps"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/text_welcome"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Password manager section -->
    <LinearLayout
        android:id="@+id/password_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_recent_apps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_passwords_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No passwords added yet"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/button_add_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Manager" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
